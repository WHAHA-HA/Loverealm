%div.sign-up-wrapp
  %section.login-screen.row
    .form-signup.home-current-form.col-sm-6.clearfix
      %h2.form.signup__heading LoveRealm
      %p.form-signup__intro Connect with millions of Christians across the globe <br>Encourage each other.

      - if !user_signed_in?
        = link_to "CONNECT WITH E-MAIL",  new_user_registration_path, class: 'btn btn-block main-log btn-primary btn-lg form-signup__btn'
        = link_to  user_omniauth_authorize_path(:facebook), class: 'btn main-log btn-block btn-facebook btn-lg form-signup__btn' do
          %i.fa.fa-facebook
          CONNECT WITH FACEBOOK
        = link_to user_omniauth_authorize_path(:google_oauth2), class: 'btn main-log btn-block btn-facebook btn-lg form-signup__btn' do
          %i.google-icon
          CONNECT WITH GOOGLE+

      - else
        %div#logged-in
        = link_to "Logout", destroy_user_session_path, method: :get

      .text-center
        = link_to 'https://play.google.com/store/apps/details?id=com.loverealm.loverealmmobile', class: 'app-market-image' do
          = image_tag "google_play_badge.png"

    .form-login.sidebar-login
      .wrapper
        %h2.form.signup__heading.login-form Login to LoveRealm
        %p.form-signup__footer
          You're just step away from
          %br
          connecting with Christians world wide
        = link_to user_omniauth_authorize_path(:facebook), class: 'btn btn-block btn-facebook btn-lg sidebar-face form-signup__btn' do
          %i.fa.fa-facebook
          CONNECT WITH FACEBOOK
        = link_to user_omniauth_authorize_path(:google_oauth2), class: 'btn btn-block btn-facebook btn-google btn-lg sidebar-face form-signup__btn' do
          %i.fa.fa-facebook
          CONNECT WITH GOOGLE+
        %p.spec-line
          %span OR
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-inputs
            = f.input_field :email, required: false, autofocus: true, :placeholder => "EMAIL"
            = f.input_field :password, required: false, :placeholder => "PASSWORD"
          .form-actions
            = f.button :submit, "CONNECT"
          = link_to "Forgot your password?", new_password_path(resource_name), {:class => "forgot-pass-link"}

