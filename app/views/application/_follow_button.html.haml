- if current_user.following?(other_user)
  = link_to 'Unfollow', current_user.active_relationships.find_by(followed_id: other_user.id), method: :delete, class: 'btn btn-default relationship-button'
- else
  = link_to 'Follow', relationships_path(followed_id: other_user.id), method: :post, class: 'btn btn-default relationship-button'
